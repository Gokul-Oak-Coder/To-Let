<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App.Starting"
        tools:targetApi="31">
        <activity
            android:name=".ui.activities.OwnerHomeActivity"
            android:exported="false"
            android:label="@string/title_activity_owner_home"
            android:theme="@style/Theme.ToLet" />
        <activity
            android:name=".ui.activities.TenantHomeActivity"
            android:exported="false"
            android:label="@string/title_activity_tenant_home"
            android:theme="@style/Theme.ToLet"/>
        <activity
            android:name=".ui.auth.VerifyOTPActivity"
            android:exported="false"
            android:label="@string/title_activity_verify_otp"
            android:theme="@style/Theme.ToLet"/>
        <activity
            android:name=".ui.auth.UserVerifyActivity"
            android:exported="true"
            android:label="@string/title_activity_user_verify"
            android:theme="@style/Theme.ToLet">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>